@model PaymentRecordCreateViewModel
@{
    IEnumerable<SelectListItem> employees = ViewBag.Employees;
    IEnumerable<SelectListItem> taxYears = ViewBag.TaxYears;
}

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-controller="Payment" asp-action="Index">Payment List</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">New Payment</li>
                </ol>
            </nav><br />
            <form method="post" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label asp-for="EmployeeId"></label>
                    </div>
                    <div class="form-group col-md-12">
                        <select asp-for="EmployeeId" class="form-control">
                            <option>-- Select Employee --</option>
                            @if (employees != null){
                                foreach (SelectListItem item in employees){
                                    <option value="@item.Value">@item.Text</option>
                                }
                                
                            }
                        </select>
                        <span asp-validation-for="EmployeeId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">

                    <div class="form-group col-md-1">
                        <label asp-for="PayMonth"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <select asp-for="PayMonth" class="form-control">
                            <option>-- Select Month --</option>
                            <option value="January">January</option>
                            <option value="February">February</option>
                            <option value="February">March</option>
                            <option value="February">April</option>
                            <option value="February">May</option>
                            <option value="February">June</option>
                            <option value="February">July</option>
                            <option value="February">August</option>
                            <option value="February">September</option>
                            <option value="February">October</option>
                            <option value="February">November</option>
                            <option value="February">December</option>
                        </select>
                        <span asp-validation-for="PayMonth" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-1">
                        <label asp-for="TaxYearId"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <select asp-for="TaxYearId" class="form-control">
                            <option>-- Select Month --</option>
                            @if (taxYears != null)
                            {
                                foreach (SelectListItem item in taxYears)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }

                            }
                        </select>
                        <span asp-validation-for="TaxYearId" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-1">
                        <label asp-for="PayDate"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input type="date" class="form-control" asp-for="PayDate" />
                        <span asp-validation-for="PayDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-1">
                        <label asp-for="HourlyRate"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input type="text" class="form-control" asp-for="HourlyRate" placeholder="0.00" />
                        <span asp-validation-for="HourlyRate" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-1">
                        <label asp-for="HourlyWorker"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input type="text" class="form-control" asp-for="HourlyWorker" placeholder="0.00" />
                        <span asp-validation-for="HourlyWorker" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-1">
                        <label asp-for="ContractualHours"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input type="text" class="form-control" asp-for="ContractualHours" placeholder="0.00" />
                        <span asp-validation-for="ContractualHours" class="text-danger"></span>
                    </div>
                    
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-secondary btn-rounded float-left" style="margin-right:auto.7em">Submit</button>
                    <a asp-controller="Payment" asp-action="Index" class="btn btn-primary btn-rounded float-right" style="margin-right:auto.7em">Cancel</a>
                    <br />
                    <br />
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_validationScriptsPartial");
    }
    }